{
  "version": 2,
  "buildCommand": "composer install --no-dev --optimize-autoloader && mkdir -p bootstrap/cache",
  "builds": [
    {
      "src": "api/index.php",
      "use": "vercel-php"
    }
  ],
  "routes": [
    {
      "src": "/(css|js|images|fonts|favicon|robots.txt|favicon.ico)/(.*)",
      "dest": "/public/$1/$2"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ]
}

